<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="@drawable/world1">
    <Button android:id="@+id/resetloc" android:text="reset locations" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></Button>
    <RadioGroup android:layout_width="wrap_content" android:id="@+id/radioGroup1" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
        <RadioButton android:clickable="false" android:id="@+id/avai" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Locations set" android:checked="true"></RadioButton>
        <RadioButton android:clickable="false" android:id="@+id/navai" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Locations not set"></RadioButton>
    </RadioGroup>
    
</RelativeLayout>
