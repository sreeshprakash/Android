<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cloudpress"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Second"
            android:label="@string/title_activity_second" >
        </activity>
        <activity
            android:name=".AppTasks"
            android:label="@string/title_activity_app_tasks" >
        </activity>
        <activity
            android:name=".Registeration"
            android:label="@string/title_activity_registeration" >
        </activity>
        <activity
            android:name=".WelcomeUser"
            android:label="@string/title_activity_welcome_user" >
        </activity>
        <activity
            android:name=".OwnCloud"
            android:label="@string/title_activity_own_cloud" >
        </activity>
    </application>

</manifest>
